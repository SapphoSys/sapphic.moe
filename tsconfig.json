{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "$assets/*": ["src/assets/*"],
      "$components/*": ["src/components/*"],
      "$data/*": ["src/data/*"],
      "$hooks/*": ["src/hooks/*"],
      "$layouts/*": ["src/layouts/*"],
      "$plugins/*": ["plugins/*"],
      "$scripts/*": ["src/scripts/*"],
      "$styles/*": ["src/styles/*"],
      "$types/*": ["src/types/*"],
      "$utils/*": ["src/utils/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
