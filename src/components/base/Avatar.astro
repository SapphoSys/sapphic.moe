---
import { Image } from 'astro:assets';

import { images } from '$utils/config';

interface Props {
  class?: string;
  width: number;
  height: number;
}

const { class: className, width, height } = Astro.props;
---

<Image
  class:list={[className, 'inline-flex aspect-square overflow-hidden rounded-full']}
  {width}
  {height}
  src={images.path}
  alt={images.alt}
  title={`${images.alt} Click to get back to the home page.`}
  loading="eager"
/>
